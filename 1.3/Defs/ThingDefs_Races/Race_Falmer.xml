			  <LeatherAmount>50</LeatherAmount>
			  <PsychicSensitivity>1.2</PsychicSensitivity>
			  <GlobalLearningFactor>1.1</GlobalLearningFactor>
			  <SocialImpact>1.1</SocialImpact>
		</statBases>

